<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timetable.TimeTableDetailActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/back12"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#002B5B"
        android:fontFamily="@font/welcomr"
        android:text="강의 정보 수정"/>
    <View
        android:layout_marginTop="3dp"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="#ECB365"/>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의번호"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/lecture_num"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:hint="10112"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의실"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/lecture_room"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="강의실번호"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="담당교수"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/teacher_name"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="교수명"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의명"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/lecture_title"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="강의명"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="강의년도"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lecture_year"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="강의번호내용"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학기"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/semester"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="강의실내용"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학점"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/subjectcredit"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="학점내용"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="수강인원"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/capacity"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="책"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="수강요일"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/lecture_day"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="수강요일내용"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="교시"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/lecture_time"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="교시"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="중간고사"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/midex"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="날짜"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="기말고사"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/finalex"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="기말날짜"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="온/오프"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/state"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="온/오프라인"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="이수구분"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/sortation"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="전공/교양"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="교재명"
                    android:gravity="center"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/book"
                    android:padding="5dp"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="책"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_save"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#041C32"
                android:layout_marginHorizontal="10dp"
                android:text="저장"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ECB365"
                android:text="취소"/>
        </LinearLayout>

        <View
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="#ECB365"/>
    </LinearLayout>


</LinearLayout>