<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipment.EqModifyActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#123"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="비품 추가"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:backgroundTint="#EEEDEF"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="비품이름"
                        android:layout_marginRight="10dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/addeqname"
                        android:background="@drawable/edround"
                        android:hint="비품이름"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="비품수량"
                        android:layout_marginRight="10dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/addeqquantity"
                        android:background="@drawable/edround"
                        android:hint="비품수량"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="구매일"
                        android:layout_marginRight="10dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/adddate"
                        android:background="@drawable/edround"
                        android:hint="구매일"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:backgroundTint="#123"
                        android:id="@+id/insert_date"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:headerBackground="@drawable/time"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        />

                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="기타정보"
                        android:layout_marginRight="10dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/addinfo"
                        android:background="@drawable/edround"
                        android:hint="기타정보"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="가격"
                        android:layout_marginRight="10dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/addprice"
                        android:background="@drawable/edround"
                        android:hint="가격"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/eqeqinsert_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                android:backgroundTint="#123"
                android:text="추가" />

            <Button
                android:id="@+id/eqback_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:backgroundTint="#FFA352"
                android:text="취소" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>