<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:id="@+id/board_cardview"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#F6F7F6"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >

            <LinearLayout
                android:id="@+id/ln_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="제목"
                        android:textColor="@color/gray8"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/board_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="작성시간"
                            android:textColor="@color/gray7"
                            android:textSize="15dp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="#FF68696A" />

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/board_writer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="작성자"
                        android:textColor="@color/gray7"
                        android:textSize="15dp" />

                </LinearLayout>

                    <TextView
                        android:textStyle="bold"
                            android:id="@+id/board_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="내용"
                            android:maxLines="1"
                            android:textColor="@color/gray7"
                            android:textSize="15dp" />






                </LinearLayout>

                <ImageView
                    android:id="@+id/board_imgfile"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:src="@drawable/book2" />

            </LinearLayout>





        </RelativeLayout>

        <View
            android:layout_gravity="bottom"
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray3" />
    </androidx.cardview.widget.CardView>









</LinearLayout>