<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecture.LectureFragment"
    android:orientation="vertical"
    android:background="@drawable/back12"
    android:padding="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#002B5B"
        android:fontFamily="@font/welcomr"
        android:text="강의 상세 정보"/>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="#ECB365"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="강의번호"
                    android:background="#4CC7DCF7"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/lecture_num"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:textSize="13dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="강의번호"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의실"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/lecture_room"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의실번호"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="담당교수"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/teacher_name"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:text="교수명"
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의명"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/lecture_title"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="강의명"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#4CC7DCF7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="강의년도"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lecture_year"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="강의번호내용"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학기"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/semester"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="강의실내용"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학점"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/subjectcredit"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="학점내용"
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="수강인원"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="#4CC7DCF7"
                        android:textColor="#000"
                        />
                    <TextView
                        android:id="@+id/capacity"
                        android:padding="5dp"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="수강인원"
                        android:textColor="#000000"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="수강요일"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/lecture_day"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="수강요일내용"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="교시"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/lecture_time"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="교시"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="중간고사"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/midex"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="날짜"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="기말고사"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/finalex"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:textSize="13dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="기말날짜"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="온/오프"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/state"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="온/오프라인"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="이수구분"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/sortation"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="전공/교양"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="교재명"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#4CC7DCF7"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/book"
                    android:padding="5dp"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="책"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
        <Button
            android:id="@+id/btn_back"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#041C32"
            android:textStyle="bold"
            android:text="뒤로가기"/>
        <Button
            android:id="@+id/btn_modify"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECB365"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:text="수정하기"/>
            <Button
                android:id="@+id/btn_delete"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#851A1A"
                android:textStyle="bold"
                android:text="삭제하기"/>
        </LinearLayout>

    </LinearLayout>

        <View
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="#ECB365"/>
    </LinearLayout>
</LinearLayout>